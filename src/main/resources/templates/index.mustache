{{>layout/header}}

    <h1>스프링 부트로 시작하는 웹 서비스 - Developed by Yeongmin Ko</h1>
    <div class="col-md-12">
        <!-- login function area -->
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button"
                   class="btn btn-primary">글 등록</a>
                {{#userName}}
                    <span id="user">{{userName}}</span>님 반갑습니다!
                    <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                {{/userName}}
                {{^userName}}
                    <a href="/oauth2/authorization/google"
                       class="btn btn-success active" role="button">구글 로그인</a>
                    <a href="/oauth2/authorization/naver"
                       class="btn btn-secondary active" role="button">네이버 로그인</a>
                {{/userName}}
            </div>
        </div>
    </div>
    <br>
    <!-- printing list area -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>



{{>layout/footer}}